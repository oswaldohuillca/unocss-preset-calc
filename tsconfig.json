{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
    ],
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**"
  ]
}